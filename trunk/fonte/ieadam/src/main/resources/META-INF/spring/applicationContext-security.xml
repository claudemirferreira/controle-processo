<!-- 			<user-service> -->
<!-- 				<user name="user" password="user1" authorities="ROLE_USER" /> -->
<!-- 			</user-service> -->
<!-- 		</authentication-provider> -->
		<authentication-provider ref="IEADAMAuthenticationProvider" />
	</authentication-manager>

</b:beans>
